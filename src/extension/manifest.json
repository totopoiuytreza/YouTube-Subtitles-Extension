{
    "manifest_version": 3,
    "name": "YoutubeSubtitles",
    "description": "Adds subtitles to youtube videos",
    "permissions": ["tabs", "storage", "activeTab"],
    "version": "1.0",
    "author": "totopoiuytreza, Alexis0720, chopeurx, Clutchboyyyy",
    "icons": {
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
        },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "js": [
          "content_script.js"
        ]
      }
    ],
    "options_ui": {
      "page": "popup.html",
      "open_in_tab": true
    }

  }